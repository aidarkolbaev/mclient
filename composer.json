{
  "name": "aidarkolbaev/mclient",
  "type": "library",
  "description": "Pure PHP Memcached client",
  "homepage": "https://github.com/aidarkolbaev/mclient",
  "license": "MIT",
  "authors": [
    {
      "name": "Aidar Kolbaev",
      "email": "aidarkolbaew@gmail.com"
    }
  ],
  "require": {
    "php": "^7.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "phpunit/phpunit": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "MClient\\": "MClient"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MClient\\Tests\\": "tests"
    }
  },
  "scripts": {
